# Copie ce fichier, renomme-le en .env et change les infos avec ta BDD locale
DATABASE_URL="mysql://USER:PASSWORD@localhost:3306/NOM_DE_TA_BDD"

# OBLIGATOIRE : Clé secrète pour signer les tokens JWT (générer avec: openssl rand -base64 32)
AUTH_SECRET="CHANGE_ME_GENERATE_WITH_openssl_rand_base64_32"

# URL de base pour l'auth
AUTH_ORIGIN="http://localhost:3000/api/auth"

# Clé API Resend pour l'envoi d'emails
RESEND_API_KEY="re_XXXXXXXXXXXX"

# Override email en développement (tous les emails seront envoyés à cette adresse)
EMAIL_DEV_OVERRIDE="votre@email.com"
